<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miraj.shop.Activity.CategoriesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/menuFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.miraj.shop.Fragment.MenuFragment" />

        <fragment
            android:id="@+id/recentViewedProductsFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="com.example.miraj.shop.Fragment.RecentViewedProductsFragment"/>

        <fragment
            android:id="@+id/categoriesFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.miraj.shop.Fragment.CategoriesFragment"/>
    </LinearLayout>
</FrameLayout>
